<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_alert"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/bankNameLinear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start"
                android:text="Please confirm below details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/loan_table_view"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/alert_table_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:id="@+id/alert_fillable_area">
                    <TableLayout
                        android:id="@+id/alert_fixed_column"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TableLayout
                            android:id="@+id/alert_scrollable_part"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"/>
                    </HorizontalScrollView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

<LinearLayout
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="Total Amount : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/remitance_amount_alert_textView"
        android:textSize="20sp"
        android:textColor="@color/dark_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    </LinearLayout>
</RelativeLayout>