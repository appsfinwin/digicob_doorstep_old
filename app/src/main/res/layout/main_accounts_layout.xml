<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:clickable="true">



    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerInParent="true">

    <ImageButton
        android:id="@+id/newAccountBtn"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/nwe_account_btn_bg"
        android:layout_margin="16dp"/>
    <ImageButton
        android:id="@+id/quickOpeningBtn"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/quick_opening_btn_bg"
        android:layout_margin="16dp"/>
    <ImageButton
        android:textSize="20sp"
        android:id="@+id/kycUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/kyc_updatet_btn_bg"
        android:visibility="visible"
        android:layout_margin="16dp"/>

</LinearLayout>
</LinearLayout>
</RelativeLayout>