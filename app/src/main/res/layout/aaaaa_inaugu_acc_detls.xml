<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/inau_miniStatementCANCELbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close_btn"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="425dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Account Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <EditText
                    android:id="@+id/inau_accountNumberMiniStatementEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:hint=" Enter Your Account Number "
                    android:text="133509"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="22sp" />

            </LinearLayout>

            <Button
                android:id="@+id/inau_miniStatementOKbtn"
                style="@style/RbButton.Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="OK" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/inau_mini_statement_acc_search_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/Linear1"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="41dp"
            android:background="@drawable/search"
            android:layout_alignRight="@+id/Linear1" />

    </RelativeLayout>
</RelativeLayout>