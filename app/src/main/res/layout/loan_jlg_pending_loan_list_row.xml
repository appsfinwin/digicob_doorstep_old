<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_accno"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Acc No" />

    <TextView
        android:id="@+id/txt_loan_typ"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Loan Type" />

    <TextView
        android:id="@+id/txt_branch_name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Branch Name" />

    <TextView
        android:id="@+id/txt_period_typ"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Period Type" />

    <TextView
        android:id="@+id/txt_purpose"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Purpose" />

    <TextView
        android:id="@+id/txt_sub_purpose"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Sub Purpose" />

    <TextView
        android:id="@+id/txt_grp_name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Group Name" />

    <Button
        android:id="@+id/btn_edt"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="5dp"
        android:singleLine="true"
        android:visibility="gone"
        android:text="Edit" />

    <Button
        android:id="@+id/btn_rmv"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Delete" />
</LinearLayout>