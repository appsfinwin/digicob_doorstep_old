<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ch_bio_textview"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Enter your Username &amp; Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="30dp"
        android:layout_below="@+id/ch_bio_textview"
        android:id="@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_layout_padding"
        android:paddingRight="@dimen/login_layout_padding"
        android:paddingTop="@dimen/login_layout_padding_top"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:foregroundTint="#4b4444">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/bio_username_edittext"
                style="@style/RegistrationEditTextStyle"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:hint="Username"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            app:passwordToggleTint="#4b4444"
            android:foregroundTint="#4b4444">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/bio_password_edittext"
                style="@style/RegistrationEditTextStyle"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:hint="Password"
                android:inputType="textPassword" />


        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</RelativeLayout>